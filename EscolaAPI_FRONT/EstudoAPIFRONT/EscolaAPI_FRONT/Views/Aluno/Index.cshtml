@model IEnumerable<EscolaAPI_FRONT.DTO.AlunoDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdAluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a href="/Aluno/EditarAluno/@item.IdAluno">Editar Aluno</a> |
                @Html.ActionLink("Delete", "Delete", new { idAluno = item.IdAluno } )
            </td>
        </tr>
}
    </tbody> 
</table>
